<div class="row">
    <h1>Listing Profiles</h1>

    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Bio</th>
            <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @profiles.each do |profile| %>
            <tr>
                <td><%= profile.name %></td>
                <td><%= profile.bio %></td>
                <td><%= link_to 'Show', [current_user, profile] %></td>
                <td><%= link_to 'Edit', edit_user_profile_path(current_user) %></td>
                <td><%= link_to 'Destroy', [current_user, profile], method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>
