<!DOCTYPE html>
<html>
<head>
    <title>TestApp</title>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
</head>
<body>

<% if user_signed_in? %>
    <div id="wrapper">
        <%= render partial: 'shared/navigation' %>

        <div id="page-wrapper">
            <%= render partial: 'shared/alerts' %>
            <%= yield %>
        </div>
    </div>
<% else %>
    <%= render partial: 'shared/alerts' %>
    <%= yield %>
<% end %>
</body>
</html>
